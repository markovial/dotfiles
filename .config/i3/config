font pango:Cantarell-Regular 20




# }}}

# WORKSPACE SETTINGS ------------------------------------------------------ {{{

set $workspace1 "1"
set $workspace2 "2"
set $workspace3 "3"
set $workspace4 "4"
set $workspace5 "5"
set $workspace6 "6"
set $workspace7 "7"
set $workspace8 "8"
set $workspace9 "9"

#set $workspace1 ""
#set $workspace2 ""
#set $workspace9 ""
